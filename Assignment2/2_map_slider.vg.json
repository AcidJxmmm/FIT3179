{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/AcidJxmmm/FIT3179/main/Assignment2/database/US_Lightning_Forest_Small_Fires.csv"
    },
    "vconcat": [
        {
            "hconcat": [
                {
                    "width": 330,
                    "height": 350,
                    "title": "US Wildfires Type A due to Lightning (1992 - 2010)",
                    "projection": { "type": "albersUsa" },
                    "layer": [
                        {
                            "data": {
                                "url": "https://raw.githubusercontent.com/AcidJxmmm/FIT3179/main/Assignment2/js/ne_110m_admin_1_states_provinces.json",
                                "format": {
                                    "type": "topojson",
                                    "feature": "ne_110m_admin_1_states_provinces"
                                }
                            },
                            "mark": {
                                "type": "geoshape",
                                "fill": "lightgray",
                                "stroke": "white"
                            }
                        },
                        {
                            "transform": [{ "filter": { "param": "time_brush" } }],
                            "encoding": {
                                "longitude": { "field": "LONGITUDE", "type": "quantitative" },
                                "latitude": { "field": "LATITUDE", "type": "quantitative" },
                                "color": {
                                    "field": "FIRE_SIZE",
                                    "type": "quantitative",
                                    "title": "Fire Size",
                                    "scale": {
                                        "type": "threshold",
                                        "domain": [0, 0.2, 0.4, 0.6, 0.8, 1],
                                        "range": [
                                            "#fee5d9",
                                            "#fcbba1",
                                            "#fc9272",
                                            "#fb6a4a",
                                            "#ef3b2c",
                                            "#cb181d",
                                            "#99000d"
                                        ]
                                    }
                                },
                                "tooltip": [
                                    { "field": "Fire_Date", "type": "temporal", "title": "Date" },
                                    {
                                        "field": "FIRE_SIZE",
                                        "type": "quantitative",
                                        "title": "Fire Size"
                                    },
                                    { "field": "STATE", "type": "nominal", "title": "State" }
                                ]
                            },
                            "layer": [
                                { "mark": { "type": "circle", "opacity": 0.4, "size": 15 } }
                            ]
                        }
                    ]
                },
                {
                    "width": 330,
                    "height": 350,
                    "layer": [
                        {
                            "transform": [
                                {
                                    "bin": { "step": 0.2, "extent": [0, 1] },
                                    "field": "FIRE_SIZE",
                                    "as": "fire size"
                                }
                            ],
                            "mark": "area",
                            "encoding": {
                                "x": {
                                    "field": "Fire_Date",
                                    "timeUnit": "yearmonth",
                                    "scale": { "domain": { "param": "time_brush" } },
                                    "axis": { "title": "", "tickCount": 5, "grid": false }
                                },
                                "y": { "aggregate": "count", "title": "Count of Wildfires" },
                                "color": {
                                    "field": "fire size",
                                    "scale": {
                                        "range": [
                                            "#fee5d9",
                                            "#fcbba1",
                                            "#fc9272",
                                            "#fb6a4a",
                                            "#ef3b2c",
                                            "#cb181d",
                                            "#99000d"
                                        ]
                                    },
                                    "legend": null
                                },
                                "tooltip": [{ "aggregate": "count", "title": "Number of Wildfires" }]
                            }
                        },
                        {
                            "data": {
                                "values": {
                                    "label": "The Wildfires in USA are highly "
                                }
                            },
                            "mark": {
                                "type": "text",
                                "align": "center",
                                "yOffset": -90,
                                "xOffset": -70
                            },
                            "encoding": { 
                                "text": { "field": "label" }
                            }
                        },
                        {
                            "data": {
                                "values": {
                                    "label": "witnessed between July and August"
                                }
                            },
                            "mark": {
                                "type": "text",
                                "align": "center",
                                "yOffset": -75,
                                "xOffset": -68
                            },
                            "encoding": { 
                                "text": { "field": "label" }
                            }
                        }

                    ]
                }
            ]
        },
        {
            "width": 800,
            "height": 60,
            "mark": { "type": "line", "color": "#fb6a4a" },
            "title": "Use this line chart to filter out the data based on time",
            "params": [
                {
                    "name": "time_brush",
                    "select": { "type": "interval", "encodings": ["x"] }
                }
            ],
            "encoding": {
                "x": {
                    "field": "Fire_Date",
                    "timeUnit": "yearmonth",
                    "axis": { "title": "", "format": "%Y" }
                },
                "y": {
                    "aggregate": "count",
                    "axis": { "tickCount": 3, "grid": false },
                    "title": "Count"
                }
            }
        }
    ],
    "config": { "title": { "font": "sans-serif", "fontSize": 14 } }
}